# Database
# SQLite (default):
DATABASE_URL=sqlite:///./data/revert_lp.db
# PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/revert_lp

# The Graph API Key (REQUIRED for subgraph queries)
# Get your free API key at: https://thegraph.com/studio/
GRAPH_API_KEY=your_api_key_here

# Telegram notifications (optional)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Debug mode
DEBUG=false

